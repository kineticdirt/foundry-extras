<div class="clothing-hud {{#if minimized}}minimized{{/if}}">
	<div class="hud-header">
		<span class="hud-title">Clothing</span>
		<button class="hud-minimize-btn" type="button" title="{{#if minimized}}Expand{{else}}Minimize{{/if}}">
			<i class="fas {{#if minimized}}fa-chevron-left{{else}}fa-chevron-down{{/if}}"></i>
		</button>
	</div>
	{{#unless minimized}}
	<div class="hud-content">
		{{#each sections as |section sectionKey|}}
		<div class="clothing-section" data-section="{{sectionKey}}">
			<div class="section-header">
				<i class="{{section.icon}}"></i>
				<span class="section-label">{{section.label}}</span>
			</div>
			<div class="section-slots">
				{{#each section.slots as |slot|}}
				<div class="clothing-slot {{#if slot.item}}filled{{else}}empty{{/if}}" data-slot="{{slot.key}}"
					title="{{slot.label}}{{#if slot.item}}: {{slot.item.name}}{{/if}}">

					{{#if slot.item.img}}
					<img src="{{slot.item.img}}" alt="{{slot.item.name}}">
					{{else}}
					<div class="slot-placeholder">
						<span class="slot-layer">L{{slot.layer}}</span>
					</div>
					{{/if}}

					{{#if slot.item}}
					<div class="remove-item">
						<i class="fas fa-times"></i>
					</div>
					{{/if}}
				</div>
				{{/each}}
			</div>
		</div>
		{{/each}}
	</div>
	{{/unless}}
</div>